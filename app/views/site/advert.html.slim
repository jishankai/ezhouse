.container-fluid#main-container
  .row.site_bg[style='margin-top:-20px']
    .row[style='margin-top:320px']
      .col-md-offset-3.col-md-6
        font[color='white'; face="微软雅黑"]
          center
            h1[style='text-shadow:1px 1px black'] 为您找到最优秀的经纪人
            footer[style='text-shadow:1px 1px black'] 与黑中介和假房源说再见
    .row[style='margin:24px auto 204px auto']
      .col-md-offset-3.col-md-6#search_bar
        = nav do
          = link_to '买卖','#sale',  'aria-controls':"sale", role:"tab", 'data-toggle':"tab"
          = link_to '租赁','#rent',  'aria-controls':"rent", role:"tab", 'data-toggle':"tab"
          = link_to '经纪人','#agents',  'aria-controls':"agents", role:"tab", 'data-toggle':"tab"
