          .tab-pane.active#sale[role='tabpanel']
            .input-group
              input.search.form-control#searchforsite[type='text' placeholder='买卖区域，商圈，小区名称' required]
              span.input-group-btn
                button.btn_search.btn.btn-success[type='button' data-loading-text='加载中...' style='background:#4bb7fc']
                  = icon :search
          .tab-pane#rent[role='tabpanel']
            .input-group
              input.search.form-control#searchforsite[type='text' placeholder='租赁区域，商圈，小区名称' required]
              span.input-group-btn
                button.btn_search.btn.btn-success[type='button' data-loading-text='加载中...' style='background:#4bb7fc']
                  = icon :search
          .tab-pane#agents[role='tabpanel']
            .input-group
              input.search.form-control#searchforsite[type='text' placeholder='经纪人姓名，手机号码' required]
              span.input-group-btn
                button.btn_search.btn.btn-success[type='button' data-loading-text='加载中...' style='background:#4bb7fc']
                  = icon :search
